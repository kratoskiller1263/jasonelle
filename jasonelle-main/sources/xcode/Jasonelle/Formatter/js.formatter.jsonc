{
  "incremental": true,
  "lineWidth": 80,
  "typescript": {
    // This applies to both JavaScript & TypeScript
    "quoteStyle": "preferDouble",
    "binaryExpression.operatorPosition": "sameLine"
  },
  "json": {
    "commentLine.forceSpaceAfterSlashes": true,
    "indentWidth": 2
  },
  "includes": [
    "**/*.{ts,tsx,js,jsx,mjs,json,md}"
  ],
  "excludes": [
    "**/node_modules",
    "**/*-lock.json",
    "**/*.xcassets",
    "**/_build"
  ],
  "plugins": [
    // You may specify any urls or file paths here that you wish.
    "https://plugins.dprint.dev/typescript-0.67.1.wasm",
    "https://plugins.dprint.dev/json-0.15.1.wasm",
    "https://plugins.dprint.dev/markdown-0.13.1.wasm"
  ]
}
